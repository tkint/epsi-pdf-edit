                  <MenuItem mnemonicParsing="false" onAction="#btnFileExit" text="Quitter" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Editer">
            <items>
              <MenuItem mnemonicParsing="false" text="Supprimer" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#btnHelpAbout" text="A propos" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Test">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#testCreateFile" text="Générer un document" />
                  <MenuItem mnemonicParsing="false" onAction="#testAddImage" text="Ajouter une image" />
                  <MenuItem mnemonicParsing="false" onAction="#testExtractImage" text="Extraire une image" />
                  <MenuItem mnemonicParsing="false" onAction="#testAddTable" text="Ajouter un tableau" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
